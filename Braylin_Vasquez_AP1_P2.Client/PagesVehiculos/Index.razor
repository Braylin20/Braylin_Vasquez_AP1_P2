@page "/Index"
@inject HttpClient httClient

<div class="card shadow-lg">
    <div class="card-header">
        <h3>Index</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <label>Filtrar Por</label>
                <InputSelect @bind-Value="Opcion" class="form-select" >
                    <option value="1">Veh&iacute;culoId</option>
                    <option value="2">Descripci&oacute;n</option>
                    <option value="3">Costo</option>
                    <option value="4">Todo</option>
                </InputSelect>
            </div>
            <div class="col-4">
                @if (Opcion == 1)
                {
                    <label>Veh&iacute;culoId</label>
                    <div class="input-group">

                        <InputNumber @bind-Value="Vehiculos.VehiculoId" class="form-control" />
                        <button type="button" class="btn btn-primary" @onclick="Buscar">Buscar</button>
                    </div>
                }
                else if (Opcion == 2)
                {
                    <label>Descripci&oacute;n</label>
                    <div class="input-group">
                        <InputText @bind-Value="Vehiculos.Descripcion" class="form-control" />
                        <button type="button" class="btn btn-primary" @onclick="Buscar">Buscar</button>
                    </div>
                }
                else if (Opcion == 3)
                {

                    <label>Costo</label>
                    <div class="input-group">
                        <InputNumber @bind-Value="Vehiculos.Costo" class="form-control" />
                        <button type="button" class="btn btn-primary" @onclick="Buscar">Buscar</button>
                    </div>

                }
                else if (Opcion == 4)
                {
                    <div>
                        <button type="button" class="btn btn-primary mt-4" @onclick="Buscar">Buscar</button>
                    </div>
                }
            </div>
           
        </div>
        <div class="justify-content-end d-flex mb-4">
            <a href="Create" class="btn btn-success bi-floppy-fill">Create</a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Veh&iacute;culoId</th>
                    <th>Fecha</th>
                    <th>Descripci&oacute;n</th>
                    <th>Costo</th>
                    <th>Gastos</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in ListaVehiculos)
                {
                    <tr>
                        <td>@item.VehiculoId</td>
                        <td>@item.Fecha</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Costo</td>
                        <td>@item.Gastos</td>
                        <td>
                            <a href="/Delete/@item.VehiculoId" class="btn btn-danger bi bi-trash-fill"></a>
                            <a href="/Edit/@item.VehiculoId" class="btn btn-primary bi-box-arrow-up-right"></a>
                            <a href="/View/@item.VehiculoId" class="btn btn-warning bi bi-info-square-fill"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@code {
    public Vehiculos Vehiculos = new Vehiculos();
    public List<Vehiculos> ListaVehiculos = new List<Vehiculos>();
    public int Opcion { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ListaVehiculos = (await httClient.GetFromJsonAsync<List<Vehiculos>>("api/Vehiculos"))!;
    }

    public async Task Buscar()
    {
        if (Opcion == 1)
        {
            ListaVehiculos = (await httClient.GetFromJsonAsync<List<Vehiculos>>("api/Vehiculos"))!
            .Where(v => v.VehiculoId == Vehiculos.VehiculoId)
            .ToList();
        }
        else if (Opcion == 2)
        {
            ListaVehiculos = (await httClient.GetFromJsonAsync<List<Vehiculos>>("api/Vehiculos"))!
            .Where(v => v.Descripcion!.ToLower() == Vehiculos.Descripcion!.ToLower())
            .ToList();
        }
        else if (Opcion == 3)
        {
            ListaVehiculos = (await httClient.GetFromJsonAsync<List<Vehiculos>>("api/Vehiculos"))!
            .Where(v => v.Costo== Vehiculos.Costo)
            .ToList();
        }
        else if (Opcion == 4)
        {
            ListaVehiculos = (await httClient.GetFromJsonAsync<List<Vehiculos>>("api/Vehiculos"))!.ToList();
        }
    }
}
