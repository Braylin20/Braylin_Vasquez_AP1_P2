@page "/View/{VehiculoId:int}"
@inject HttpClient httClient
<div class="card shadow-lg">
    <div class="card-header">
        <h3> Informaci&oacute;n del vehiculo</h3>
    </div>
    <div class="card-body">
        <p> Vehiculo Id: @Vehiculo.VehiculoId</p>
        <p> Fecha: @Vehiculo.Fecha</p>
        <p> Descripcion: @Vehiculo.Descripcion</p>
        <p> Costo: @Vehiculo.Costo</p>
        <p> Gastos: @Vehiculo.Gastos</p>
        <hr clas="border-bottom" />
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>AccesorioId</th>
                        <th>Valor</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Vehiculo.VehiculosDetalle)
                    {
                        <tr>
                            <td>@item.AccesorioId</td>
                            <td>@item.Valor</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <a href="/Index" class="btn btn-primary bi bi-arrow-left-square-fill">Atr&aacute;s</a>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public int VehiculoId { get; set; }
    public Vehiculos Vehiculo = new Vehiculos();

    protected async override Task OnInitializedAsync()
    {
        Vehiculo = (await httClient.GetFromJsonAsync<Vehiculos>($"api/vehiculos/{VehiculoId}"))!;
    }
}
